@model IEnumerable<ToolUniversity.Models.db.OfficerInfor>
@{
    ViewData["Title"] = "Read Data";
}

<h1>Read Data</h1>

@if (Model.Count() <= 0)
{
    <div class="alert alert-danger">No data found</div>
}
else
{
    <table id="mytable">
        <thead>
            <tr>
                <th>Officer ID</th>
                <th>Officer Name</th>
                <th>Position</th>
                <th>Department</th>
                <th>Detail</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.OfficerId</td>
                    <td>@item.Name</td>
                    <td>@item.Position</td>
                    <td>@item.Department</td>
                    <td>
                        <a class="btn btn-info"
                           asp-controller="OfficerInfor"
                           asp-action="Details"
                           asp-route-id="@item.OfficerId">
                            Detail
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
