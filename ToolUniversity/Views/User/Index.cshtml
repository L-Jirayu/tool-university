@model IEnumerable<ToolUniversity.Models.db.User>
@{
    ViewData["Title"] = "Read Data";
}

<h1>Read Data</h1>

@if (Model.Count() <= 0)
{
    <div class="alert alert-danger">No data found</div>
}
else
{
    <table id="mytable">
        <thead>
            <tr>
                <th>User ID</th>
                <th>Name</th>
                <th>Faculty</th>
                <th>Major</th>
                <th>Detail</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.UserId</td>
                    <td>@item.Name</td>
                    <td>@item.Faculty</td>
                    <td>@item.Major</td>
                    <td>
                        <a class="btn btn-info"
                           asp-controller="User"
                           asp-action="Details"
                           asp-route-id="@item.UserId">
                            Detail
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
