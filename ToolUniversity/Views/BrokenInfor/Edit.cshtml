@model ToolUniversity.ViewModels.BrokenInforViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="BrokenId" />

    <div class="form-group">
        <label asp-for="ToolId" class="control-label"></label>
        <select asp-for="ToolId" class="form-control" asp-items="ViewBag.ToolId"></select>
        <span asp-validation-for="ToolId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserId" class="control-label"></label>
        <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
        <span asp-validation-for="UserId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Reason" class="control-label"></label>
        <input asp-for="Reason" class="form-control" />
        <span asp-validation-for="Reason" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="OfficerId" class="control-label"></label>
        <select asp-for="OfficerId" class="form-control" asp-items="ViewBag.OfficerId"></select>
        <span asp-validation-for="OfficerId" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
