@model IEnumerable<ToolUniversity.ViewModels.BrokenInforViewModel>

@{
    ViewData["Title"] = "Return List";
}

<h1>Return List</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Add New</a>
</p>

<table class="table table-bordered text-center">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().BrokenId)</th>
            <th>@Html.DisplayNameFor(model => model.First().ToolName)</th>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Reason)</th>
            <th>@Html.DisplayNameFor(model => model.First().OfficerName)</th>
            <th>Function</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.BrokenId)</td>
                <td>@Html.DisplayFor(modelItem => item.ToolName)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Reason)</td>
                <td>@Html.DisplayFor(modelItem => item.OfficerName)</td>
                <td>
                    <div class="btn-group" role="group">
                        <a class="btn btn-outline-warning me-3" asp-action="Edit" asp-route-id="@item.BrokenId">Edit</a>
                        <a class="btn btn-outline-info me-3" asp-action="Details" asp-route-id="@item.BrokenId">Details</a>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.BrokenId">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
