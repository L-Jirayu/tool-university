@model IEnumerable<ToolUniversity.Models.db.ToolInfor>;
@{
    ViewData["Title"] = "Update";
}

<h1>Update and Delete</h1>
@if (Model.Count() <= 0)
{
    <div class="alert alert-danger">No data found</div>
}
else
{
    <table id="mytable">
        <thead>
            <tr>
                <th>Tool ID</th>
                <th>Tool Name</th>
                <th>Update</th>
                <th>Remove</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ToolId</td>
                    <td>@item.ToolName</td>
                    <td>
                        <a class="btn btn-warning"
                           asp-controller="Toolinfor"
                           asp-action="ShowUpd"
                           asp-route-id="@item.ToolId"
                           onclick="return confirm('Do you want to update: @item.ToolName?')">
                            Update
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger"
                           asp-controller="Toolinfor"
                           asp-action="DelDB"
                           asp-route-id="@item.ToolId"
                           onclick="return confirm('Do you want to remove: @item.ToolName?')">
                            Remove
                        </a>
                    </td>
                </tr>
            }
        </tbody>

    </table>
}
