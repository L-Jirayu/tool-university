@model ToolUniversity.Models.db.ToolInfor;
@{
    ViewData["Title"] = "Update Data";
}

<h1>Update Data</h1>

<form method="get" asp-controller="Toolinfor" asp-action="UpdDB">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ToolId" />

    <div class="form-group">
        <label asp-for="ToolName" class="control-label"></label>
        <input asp-for="ToolName" class="form-control" />
        <span asp-validation-for="ToolName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ToolType" class="control-label"></label>
        <input asp-for="ToolType" class="form-control" />
        <span asp-validation-for="ToolType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <input asp-for="Status" class="form-control" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary"
            onclick="return confirm('Do you want to update tool')">
        Update
    </button>

    <button type="reset" class="btn btn-primary">Reset</button>

</form>

<div>
    <a asp-action="Index">Back to list</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
